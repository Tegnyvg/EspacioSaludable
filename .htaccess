# ==============================================================================
# Espacio Saludable - Apache Configuration
# ==============================================================================
# Esta configuración implementa mejores prácticas de seguridad, rendimiento
# y SEO para sitios HTML estáticos. Descomentar según el servidor.
# ==============================================================================

# ==============================================================================
# 1. MOD_REWRITE - Redirecciones y URLs limpias
# ==============================================================================

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Fuerza HTTPS (descomentar si el sitio está en HTTPS en producción)
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Elimina www (opcional: descomentar si prefieres espacio-saludable.com)
  # RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
  # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
  
  # Agrega .html a URLs sin extensión
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME}.html -f
  RewriteRule ^([^\.]+)$ $1.html [QSA,L]
</IfModule>

# ==============================================================================
# 2. COMPRESIÓN GZIP - Reduce tamaño de archivos
# ==============================================================================

<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
  AddOutputFilterByType DEFLATE application/javascript application/json
  AddOutputFilterByType DEFLATE font/woff font/woff2 application/font-woff
</IfModule>

# ==============================================================================
# 3. CACHÉ DEL NAVEGADOR - Mejora velocidad de carga
# ==============================================================================

<IfModule mod_expires.c>
  ExpiresActive On
  
  # Archivos por defecto: 1 mes
  ExpiresDefault "access plus 1 month"
  
  # HTML: No cachear (siempre actual)
  ExpiresByType text/html "access plus 0 seconds"
  
  # CSS y JavaScript: 1 año
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  
  # Fuentes: 1 año
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  
  # Imágenes: 1 mes
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/gif "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"
  ExpiresByType image/webp "access plus 1 month"
</IfModule>

# ==============================================================================
# 4. CABECERAS DE SEGURIDAD - Protege contra vulnerabilidades comunes
# ==============================================================================

<IfModule mod_headers.c>
  # Previene MIME sniffing (fuerza navegador a respetar Content-Type)
  Header set X-Content-Type-Options "nosniff"
  
  # Previene clickjacking (rechaza embedding en iframes)
  Header set X-Frame-Options "DENY"
  
  # Controla información de referrer enviada
  Header set Referrer-Policy "no-referrer"
  
  # Desactiva X-UA-Compatible de navegadores viejos
  Header unset X-UA-Compatible
  
  # Content Security Policy (CSP) - Restringe recursos externos
  # Personalizar según necesidades (permite Google Fonts, etc)
  Header set Content-Security-Policy "default-src 'self'; style-src 'self' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self'; img-src 'self' https: data:; connect-src 'self'; frame-src 'none'; object-src 'none';"
</IfModule>

# ==============================================================================
# 5. SEGURIDAD - Deshabilita directorios abiertos y protege archivos
# ==============================================================================

# Deshabilita listado de directorios
<IfModule mod_autoindex.c>
  Options -Indexes
</IfModule>

# Protege archivos sensibles
<FilesMatch "^\.(htaccess|htpasswd|git|env)$">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Order allow,deny
    Deny from all
  </IfModule>
</FilesMatch>

# ==============================================================================
# 6. ERROR PAGES - Personaliza páginas de error (opcional)
# ==============================================================================

# Descomentar y crear archivos error404.html, error500.html en raíz si necesarios
# ErrorDocument 404 /error404.html
# ErrorDocument 500 /error500.html

# ==============================================================================
# 7. TIPOS MIME - Agrega tipos de archivo no reconocidos
# ==============================================================================

<IfModule mod_mime.c>
  AddType application/javascript js jsonp
  AddType application/json json
  AddType image/svg+xml svg svgz
  AddEncoding gzip svgz
  AddType font/woff woff
  AddType font/woff2 woff2
  AddType application/font-woff woff
</IfModule>

# ==============================================================================
